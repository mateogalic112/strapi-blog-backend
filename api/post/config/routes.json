{
	"routes": [
		{
			"method": "GET",
			"path": "/posts",
			"handler": "post.find",
			"config": {
				"policies": []
			}
		},
		{
			"method": "GET",
			"path": "/posts/me",
			"handler": "post.me",
			"config": {
				"policies": ["global::isAuthenticated"]
			}
		},
		{
			"method": "GET",
			"path": "/posts/count",
			"handler": "post.count",
			"config": {
				"policies": []
			}
		},
		{
			"method": "GET",
			"path": "/posts/:id",
			"handler": "post.findOne",
			"config": {
				"policies": []
			}
		},
		{
			"method": "POST",
			"path": "/posts",
			"handler": "post.create",
			"config": {
				"policies": []
			}
		},
		{
			"method": "PUT",
			"path": "/posts/:id",
			"handler": "post.update",
			"config": {
				"policies": ["global::isTargetUser"]
			}
		},
		{
			"method": "DELETE",
			"path": "/posts/:id",
			"handler": "post.delete",
			"config": {
				"policies": ["global::alwaysFail"]
			}
		}
	]
}
