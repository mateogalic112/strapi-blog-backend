{
	"routes": [
		{
			"method": "GET",
			"path": "/likes/given",
			"handler": "like.find",
			"config": {
				"policies": ["isUserLoggedIn"]
			}
		},
		{
			"method": "GET",
			"path": "/likes/received",
			"handler": "like.find",
			"config": {
				"policies": ["postAuthorIsMe"]
			}
		},
		{
			"method": "GET",
			"path": "/likes/:postId",
			"handler": "like.find",
			"config": {
				"policies": []
			}
		},
		{
			"method": "POST",
			"path": "/likes",
			"handler": "like.create",
			"config": {
				"policies": []
			}
		},
		{
			"method": "DELETE",
			"path": "/likes/:postId",
			"handler": "like.delete",
			"config": {
				"policies": []
			}
		}
	]
}
